<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/public/css/pr-change_styles.css">
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <meta charset="UTF-8">
    <title>Edit Profile</title>


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>


<body>
    <h1>Edit your profile </h1>
    <div class="container">
        <form id="edit_form" >
                
            <label for="username"><b>Username</b></label>
            <input type="text" placeholder="Enter current Username" name="username" id="username" required>
            <label for="new_username"><b>New Username</b></label>
            <input type="text" placeholder="Enter New Username(not required)" name="new_username" id="new_username" >

            <label for="psw"><b> New Password</b></label>
            <input type="password" placeholder="Enter new Password"  id="password"
                pattern="(?=.*\d)(?=.*[A-Z])(?=.*[!@#$%^&*()_+\-=\[\]{};':\\|,.<>\/?]).{8,}"
                title="Must contain at least one number, one uppercase letter,a symbol(eg #$*&@) and at least 8 or more characters"
                required>

            <label for="psw-repeat"><b> Repeat new Password</b></label>
            <input type="password" placeholder="Repeat new Password"  id="psw_repeat" required>
                
                
            <button type="submit" id="submit_btn"> Submit </button>
        </form>
    </div>
</body>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js">
    let passwordElement = document.getElementById("password");
    let passwordRepeat = document.getElementById("psw_repeat");

    //check if passwords match
    function validatePassword(){
        if(passwordElement.value != passwordRepeat.value) {
            passwordRepeat.setCustomValidity("Passwords Don't Match");
        } else {
            passwordRepeat.setCustomValidity('');
        }
    }

    passwordElement.onchange = validatePassword;
    passwordRepeat.onkeyup = validatePassword;


    // when the form "#frm" is submited
    $("#edit_form").submit(function() {
        // here can get form data, and define data_to_send
        const username = $("#username").val();
        const new_username = $("#new_username").val();
        const password = $("#password").val();
        const psw_repeat = $("#psw_repeat").val();

        // sets the ajax() method, and included the response in a HTML tag with id="resp"
        $.ajax({
            url:"/mainpage/profile_change",
            type: "post",
            data: {
                username: username,
                new_username: new_username,
                password: password,
                psw_repeat: psw_repeat
            },
            error: function(xhr, status, error) { console.log(status,error); },
            success: function(response) {
                console.log("Edit is done");

            
            }
        });

        
    });



</script>



</html>