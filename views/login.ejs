    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>


<body>
    <div class="center">
        <h1>Login</h1>
        <form action="/" method="post">
            <div class="txt_field">
                <input type="text" placeholder="Enter Username" id='ExampleUsername' required>
                <label for='ExampleUsername'>Username</label>
            </div>


            <div class="txt_field">
                <input type="password" placeholder="Enter password" id='ExamplePassword' required>
                <label for='ExamplePassword'>Password</label>
            </div>

            <div class="pass"> Forgot password?</div>
            <input type="Submit" onclick="SubmitClicked()" value="Login">

            <div class="signup_link">
                Not a member? <a href="http://localhost:8080/register"> Signup </a>

            </div>

        </form>
    </div>



</body>

<script>
    async function SubmitClicked() { // Otan pataw to submit sto login 

        //pare apo to to documment thn timi apo to elemenent me id=ExampleUsername b
        let username = document.getElementById('ExampleUsername').value;
        let password = document.getElementById('ExamplePassword').value;



        //Ftiaxnw nea metabliti DataLogin pou periexei thn username kai password (2 se 1)
        let DataLogin = {
            username: username, // h username einai h timh ths prwths metavlitis
            password: password //
        }

        console.log(DataLogin); // mou ta emvanizei ston terminal !

        const response = await axios.post('/', DataLogin); //stelnw ston server to POST Request
        console.log(response.data);

        if (response.data == 'fail') {
            alert('Exei ginei lathos')
        }
        if (response.data == 'success') {
            window.location.href = 'http://localhost:8080/mainpage'
        }
    }
</script>

</html>
